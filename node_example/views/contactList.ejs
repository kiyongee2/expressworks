<%- include('header.ejs')  %>

<section>
    <h4>문의 게시판</h4>
    <table border="1">
        <thead>
            <tr>
                <th>idx</th>
                <th>성명</th>
                <th>연락처</th>
                <th>이메일</th>
                <th>문의내용</th>
                <th>등록일</th>
                <th>삭제</th>
            </tr>
        </thead>
        <tbody>
            <% lists.forEach(function(item){ %>
            <tr>
                <td><%=item.idx %></td>
                <td><%=item.name %></td>
                <td><%=item.phone %></td>
                <td><%=item.email %></td>
                <td><%- item.memo.replaceAll('\n', '<br>') %></td>
                <td><%=item.regdate %></td>
                <td><a href="/deleteContact?idx=<%=item.idx %>"
                    onclick="return confirm('정말로 삭제하시겠습니까?')">삭제</a></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</section>

<%- include('footer.ejs')  %>